<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/overfit"
                android:contentDescription="@string/logo" />


        </androidx.appcompat.widget.Toolbar>

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/clear"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="@string/back_to_first_screen" />

        <TextView
            android:id="@+id/activityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/activityName1"
            android:textColor="@android:color/black"
            android:fontFamily="@font/source_sans_pro_black_italic"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/activityImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="-50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/activity_image_1"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/xp1"
                android:textSize="20sp"
                tools:text="@string/xp1" />

            <TextView
                android:id="@+id/intensityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/intensity1"
                android:textSize="20sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/activityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_description"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            tools:text="activityDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/userInfo"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/quanto_voce_fez"
                android:inputType="number"/>

            <ImageButton
                android:id="@+id/confirmButton"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_gravity="end|center"
                android:layout_weight="1"
                android:background="@drawable/send"
                android:backgroundTint="@color/Yellow"
                android:contentDescription="@string/confirm_button" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>